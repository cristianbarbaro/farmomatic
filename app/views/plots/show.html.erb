<p id="notice"><%= notice %></p>

<p>
  <strong>Identifier:</strong>
  <%= @plot.identifier %>
</p>

<p>
  <strong>Description:</strong>
  <%= @plot.description %>
</p>

<p>
  <strong>Surface:</strong>
  <%= @plot.surface %>
</p>

<p>
  <strong>Greenhouse:</strong>
  <%= @plot.greenhouse %>
</p>

<p>
  <strong><%= link_to "Plantations:", farm_plot_plantations_path(@farm, @plot), target: :_blank %></strong>
  <ul>
    <% @plot.plantations.each do |plantation| %>
      <li><%= link_to "#{plantation.species.name}", [@farm, @plot, plantation], target: :_blank %></li>
    <% end %>  
  </ul>
</p>

<p>
  <strong><%= link_to "Problems:", farm_plot_problems_path(@farm, @plot), target: :_blank %></strong>
  <ul>
    <% @plot.problems.each do |problem| %>
      <li><%= link_to "#{problem.type_problem.name}", [@farm, @plot, problem], target: :_blank %></li>
    <% end %>  
  </ul>
</p>

<p>
  <strong><%= link_to "Applications:", farm_plot_product_applications_path(@farm, @plot), target: :_blank %></strong>
  <ul>
    <% @plot.product_applications.each do |application| %>
      <li><%= link_to "#{application.product.name}", [@farm, @plot, application], target: :_blank %></li>
    <% end %>  
  </ul>
</p>

<p>
  <strong><%= link_to "Crops:", farm_plot_crops_path(@farm, @plot), target: :_blank %></strong>
  <ul>
    <% @plot.crops.each do |crop| %>
      <li><%= link_to "#{crop.variety.name}", [@farm, @plot, crop], target: :_blank %></li>
    <% end %>  
  </ul>
</p>

<%= link_to 'Edit', edit_farm_plot_path(@farm, @plot) %> |
<%= link_to 'Back', farm_plots_path %>
