
<p>
  <strong>Comentario:</strong>
  <%= @product_application.comment %>
</p>

<p>
  <strong>Cantidad:</strong>
  <%= @product_application.amount %>
</p>

<p>
  <strong>Producto:</strong>
  <% if @product_application.product %>
    <%= @product_application.product.name %>
  <% else %>
    -
  <% end %>
</p>

<p>
  <strong>Otros:</strong>
  <% if @product_application.other %>
    <%= @product_application.other.name %>
  <% else %>
    -
  <% end %>
</p>

<p>
  <strong>Lote:</strong>
  <%= @product_application.plot.identifier %>
</p>

<p>
  <strong>Fecha creación:</strong>
  <%= @product_application.created_at.strftime("%d-%m-%Y %H:%M:%S") %>
</p>

<p>
  <strong>Usuario que creó registro:</strong>
  <%= User.find(@product_application.user_id).email %>
</p>

<div class="pull-right">
  <%= link_to 'Editar', edit_farm_plot_product_application_path(@farm, @plot, @product_application), class: "btn btn-success" %>
  <%= link_to 'Atrás', farm_plot_product_applications_path, class: "btn btn-default" %>
</div>