<p id="notice"><%= notice %></p>

<h1>Product Applications</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Amount</th>
      <th>Product</th>
      <th>Plot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_applications.each do |product_application| %>
      <tr>
        <td><%= product_application.comment %></td>
        <td><%= product_application.amount %></td>
        <td><%= product_application.product.name %></td>
        <td><%= product_application.plot.identifier %></td>
        <td><%= link_to 'Show', product_application %></td>
        <td><%= link_to 'Edit', edit_product_application_path(product_application) %></td>
        <td><%= link_to 'Destroy', product_application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product Application', new_product_application_path %>
