
<h3>Novedades</h3>
<hr>
<table class="table">
  <thead>
    <tr>
      <th>Título</th>
      <th>Autor</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @novelties.each do |novelty| %>
      <tr>
        <td><%= link_to novelty.title, novelty %></td>
        <td><%= novelty.user.email %></td>
        <td class="">
          <%= link_to '', novelty, class:'glyphicon glyphicon-eye-open btn btn-xs btn-default', title: 'Ver' %>
          <%= link_to '', edit_novelty_path(novelty), class:'glyphicon glyphicon-pencil btn btn-xs btn-default', title: 'Editar' %>
          <%= link_to '', novelty, class:'glyphicon glyphicon-trash btn btn-xs btn-danger', method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar el elemento?' }, title: 'Borrar' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<div class="pull-right">
  <div class="btn-right">
      <%= link_to 'Nuevo', new_novelty_path, class: "btn btn-success" %>
  </div>
</div>