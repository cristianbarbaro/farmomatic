<p id="notice"><%= notice %></p>

<h1>Type Problems</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>scientific_name</th>
      <th>Url</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @type_problems.each do |type_problem| %>
      <tr>
        <td><%= type_problem.name %></td>
        <td><%= type_problem.scientific_name %></td>
        <td><%= type_problem.url %></td>
        <td><%= type_problem.description %></td>
        <td><%= link_to 'Show', type_problem %></td>
        <td><%= link_to 'Edit', edit_type_problem_path(type_problem) %></td>
        <td><%= link_to 'Destroy', type_problem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

