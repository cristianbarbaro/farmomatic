<h3>Agregar productor a la granja <%= @farm.name %></h3>

<form action="<%= farm_add_user_path %>" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <label for="formGroupProducer">Producer</label>
    <%= select("user", "user_id", User.all.collect {|u| [ u.email, u.id ] }, { include_blank: true}, {class: "form-control" }) %>
  </div>
  <div class="form-group">
    <label for="formGroupRole">Role</label>
    <select class="form-control" name="user[role]" id="user_role"><option value=""></option>
        <option value="owner">owner</option>
        <option value="viewer">viewer</option>
    </select>
  </div>

  <div class="actions">
    <input type="submit" name="commit" value="Enviar" class="btn btn-success">
    <a href="<%= farm_path(@farm) %>" class="btn btn-danger">Cancelar</a>
  </div>
</form>
