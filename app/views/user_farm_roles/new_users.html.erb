
<p id="notice"><%= notice %></p>

<h1>Add producer</h1>

<form action="<%= farm_add_user_path %>" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <label for="formGroupProducer">Producer</label>
    <%= select("user", "user_id", User.all.collect {|u| [ u.email, u.id ] }, { include_blank: true }) %>
  </div>
  <div class="form-group">
    <label for="formGroupRole">Role</label>
    <select name="user[role]" id="user_role"><option value=""></option>
        <option value="owner">owner</option>
        <option value="viewer">viewer</option>
    </select>
  </div>

  <input type="submit" value="Submit">

</form>
