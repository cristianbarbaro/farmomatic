<h3>Variedades</h3>
<hr>
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Nombre científico</th>
      <th>Url</th>
      <th>Descripción</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @varieties.each do |variety| %>
      <tr>
        <td><%= variety.name %></td>
        <td><%= variety.scientific_name %></td>
        <td><%= variety.url %></td>
        <td><%= variety.description %></td>
        <td>
          <%= link_to '', variety, class:'glyphicon glyphicon-eye-open btn btn-xs btn-default', title: 'Ver' %>
          <%= link_to '', edit_variety_path(variety), class:'glyphicon glyphicon-pencil btn btn-xs btn-default', title: 'Editar' %>
          <%= link_to '', variety, class:'glyphicon glyphicon-trash btn btn-xs btn-danger', method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar el elemento?' }, title: 'Borrar' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<div class="pull-right">
  <div class="btn-right">
    <%= link_to 'Nuevo', new_variety_path, class: "btn btn-success" %>
  </div>
</div>
