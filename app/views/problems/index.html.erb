<p id="notice"><%= notice %></p>

<h1>Problems</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Type problem</th>
      <th>Plot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @problems.each do |problem| %>
      <tr>
        <td><%= problem.comment %></td>
        <td><%= problem.type_problem.name %></td>
        <td><%= problem.plot.identifier %></td>
        <td><%= link_to 'Show', [@farm, @plot, problem] %></td>
        <td><%= link_to 'Edit', edit_farm_plot_problem_path(@farm, @plot, problem) %></td>
        <td><%= link_to 'Destroy', [@farm, @plot, problem], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Problem', new_farm_plot_problem_path %>
