<h3>Usuarios</h3>
<hr>
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Correo electrónico</th>
      <th>Administrador</th>
      <th>Tipo usuario</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><% if user.has_role? :admin %>
                Sí
            <% else %>
                No
            <% end %>
        </td>
        <td><% if user.has_role? :owner, :any or user.has_role? :viewer, :any %>
                Productor
            <% end %> -
            <% if user.has_role? :expert %>
                Experto
            <% end %> 
        </td>
        <td>
          <%= link_to '', admin_user_path(user), class:'glyphicon glyphicon-eye-open btn btn-xs btn-default', title: 'Ver' %>
          <%= link_to '', edit_admin_user_path(user), class:'glyphicon glyphicon-pencil btn btn-xs btn-default', title: 'Editar' %>
          <%#= link_to '', admin_user_path(user), class:'glyphicon glyphicon-trash btn btn-xs btn-danger', method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar el elemento?' }, title: 'Borrar' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<div class="pull-right">
  <div class="btn-right">
    <%#= link_to 'Nuevo', new_farm_plot_path(@farm), class: "btn btn-success" %>
  </div>
</div>