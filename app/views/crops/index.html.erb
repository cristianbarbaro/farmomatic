
<h3>Cosechas</h3>
<hr>
<table class="table">
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Lote</th>
      <th>Variedad</th>
      <th>Otros</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @crops.each do |crop| %>
      <tr>
        <td><%= crop.amount %></td>
        <td><%= crop.plot.identifier %></td>
        <td>
          <% if crop.variety %>
            <%= crop.variety.name %>
          <% else %>
            -
          <% end %>
        </td>
        <td>
          <% if crop.other %>
            <%= crop.other.name %>
          <% else %>
            -
          <% end %>
        </td>
        <td>
          <%= link_to '', [@farm, @plot, crop], class:'glyphicon glyphicon-eye-open btn btn-xs btn-default', title: 'Ver' %>
          <%= link_to '', edit_farm_plot_crop_path(@farm, @plot, crop), class:'glyphicon glyphicon-pencil btn btn-xs btn-default', title: 'Editar' %>
          <%#= link_to '', [@farm, @plot, crop], class:'glyphicon glyphicon-trash btn btn-xs btn-danger', method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar el elemento?' }, title: 'Borrar' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<div class="pull-right">
  <div class="btn-right">
    <%= link_to 'Nueva', new_farm_plot_crop_path, class: "btn btn-success" %>
  </div>
</dib>