<p id="notice"><%= notice %></p>

<h1>Crops</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Amount</th>
      <th>Plot</th>
      <th>Variety</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crops.each do |crop| %>
      <tr>
        <td><%= crop.comment %></td>
        <td><%= crop.amount %></td>
        <td><%= crop.plot.identifier %></td>
        <td><%= crop.variety.name %></td>
        <td><%= link_to 'Show', [@farm, @plot, crop] %></td>
        <td><%= link_to 'Edit', edit_farm_plot_crop_path(@farm, @plot, crop) %></td>
        <td><%= link_to 'Destroy', [@farm, @plot, crop], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

